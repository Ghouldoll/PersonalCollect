<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:weibo="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="自定义View"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <com.example.mbenben.studydemo.view.weibosport.WeiBoSportView
        android:id="@+id/weiboSport"
        android:layout_width="200dp"
        android:layout_height="200dp"
        weibo:weiboinCircleColor="@color/strong"
        weibo:weibooutCircleColor="@color/colorAccent"
        weibo:weibotitleColor="@color/colorPrimary"
        weibo:weibotitleSize="40sp"/>
</LinearLayout>