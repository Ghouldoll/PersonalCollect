<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232a30"
    android:gravity="center_horizontal">

    <com.example.mbenben.studydemo.view.enviews.allviews.ENPlayView
        android:id="@+id/view_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:play_line_color="#ffffff"
        app:play_bg_line_color="#444a4f"
        app:play_line_width="14"
        app:play_bg_line_width="12"/>

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause"
        android:layout_marginTop="20dp" />

</LinearLayout>