<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/head"/>
    <FrameLayout
        android:id="@+id/bearPanel"
        android:layout_width="300dp"
        android:layout_above="@+id/one"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_height="200dp">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/ice"
            android:layout_marginTop="60dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/bear"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/bear"/>
    </FrameLayout>

    <TextView
        android:id="@+id/one"
        android:layout_width="140dp"
        android:layout_above="@+id/bottomPanel"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_height="30dp"
        android:background="@drawable/fish"/>
    <TextView
        android:id="@+id/three"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/bottomPanel"
        android:gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:id="@+id/bottomPanel"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/today"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/today"/>
        <TextView
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/today"
            android:layout_toRightOf="@+id/today"
            android:background="@drawable/text1"/>
    </RelativeLayout>


</RelativeLayout>